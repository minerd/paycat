{
  "name": "mrrcat",
  "version": "1.0.0",
  "description": "Unified Payment & Subscription Management System for Cloudflare Workers",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:migrate": "wrangler d1 execute mrrcat-db --local --file=./src/db/schema.sql",
    "db:migrate:prod": "wrangler d1 execute mrrcat-db --file=./src/db/schema.sql",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "hono": "^4.6.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260111.0",
    "@types/node": "^25.0.6",
    "typescript": "^5.7.0",
    "wrangler": "^4.58.0"
  }
}
