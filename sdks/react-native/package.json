{
  "name": "react-native-paycat",
  "version": "1.0.0",
  "description": "PayCat React Native SDK - Unified subscription management across iOS, Android, and Web",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!**/__tests__"
  ],
  "scripts": {
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "clean": "del-cli lib"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "in-app-purchase",
    "subscription",
    "paycat",
    "revenuecat"
  ],
  "repository": "https://github.com/minerd/paycat",
  "author": "PayCat",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/minerd/paycat/issues"
  },
  "homepage": "https://github.com/minerd/paycat#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-native": "^0.72.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.0.0",
    "react": "18.2.0",
    "react-native": "0.73.0",
    "react-native-builder-bob": "^0.23.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-iap": "^12.0.0"
  },
  "peerDependenciesMeta": {
    "react-native-iap": {
      "optional": true
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
