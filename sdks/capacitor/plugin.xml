<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="cordova-plugin-mrrcat"
        version="1.0.0">

    <name>MRRCat</name>
    <description>MRRCat SDK for Cordova - Unified Payment & Subscription Management</description>
    <license>MIT</license>
    <keywords>cordova,mrrcat,subscriptions,in-app-purchases,payments</keywords>
    <repo>https://github.com/anthropic/mrrcat-cordova.git</repo>
    <issue>https://github.com/anthropic/mrrcat-cordova/issues</issue>

    <engines>
        <engine name="cordova" version=">=10.0.0"/>
        <engine name="cordova-ios" version=">=6.0.0"/>
        <engine name="cordova-android" version=">=10.0.0"/>
    </engines>

    <js-module src="www/MRRCat.js" name="MRRCat">
        <clobbers target="MRRCat"/>
    </js-module>

    <!-- iOS Platform -->
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="MRRCat">
                <param name="ios-package" value="MRRCatPlugin"/>
            </feature>
        </config-file>

        <header-file src="src/ios/MRRCatPlugin.h"/>
        <source-file src="src/ios/MRRCatPlugin.m"/>

        <!-- StoreKit framework for in-app purchases -->
        <framework src="StoreKit.framework"/>

        <!-- Privacy manifest -->
        <config-file target="*-Info.plist" parent="NSAppTransportSecurity">
            <dict>
                <key>NSAllowsArbitraryLoads</key>
                <false/>
                <key>NSExceptionDomains</key>
                <dict>
                    <key>mrrcat.dev</key>
                    <dict>
                        <key>NSIncludesSubdomains</key>
                        <true/>
                        <key>NSExceptionAllowsInsecureHTTPLoads</key>
                        <false/>
                    </dict>
                </dict>
            </dict>
        </config-file>
    </platform>

    <!-- Android Platform -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="MRRCat">
                <param name="android-package" value="dev.mrrcat.cordova.MRRCatPlugin"/>
            </feature>
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/manifest">
            <uses-permission android:name="android.permission.INTERNET"/>
            <uses-permission android:name="com.android.vending.BILLING"/>
        </config-file>

        <source-file src="src/android/MRRCatPlugin.java" target-dir="src/dev/mrrcat/cordova"/>

        <!-- Google Play Billing Library -->
        <framework src="com.android.billingclient:billing:6.0.1" custom="false"/>
    </platform>

</plugin>
