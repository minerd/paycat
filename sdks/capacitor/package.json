{
  "name": "@mrrcat/capacitor",
  "version": "1.0.0",
  "description": "MRRCat SDK for Capacitor and Cordova applications",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Plugin/",
    "MRRCatCapacitor.podspec"
  ],
  "author": "MRRCat",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/minerd/mrrcat.git"
  },
  "bugs": {
    "url": "https://github.com/minerd/mrrcat/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "cordova",
    "mrrcat",
    "in-app-purchases",
    "subscriptions",
    "payments"
  ],
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin -destination generic/platform=iOS && cd ..",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- --fix --format",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "swiftlint": "node-swiftlint",
    "docgen": "docgen --api MRRCatPlugin --output-readme README.md --output-json dist/docs.json",
    "build": "npm run clean && npm run docgen && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@capacitor/android": "^5.0.0",
    "@capacitor/core": "^5.0.0",
    "@capacitor/docgen": "^0.2.0",
    "@capacitor/ios": "^5.0.0",
    "@ionic/eslint-config": "^0.3.0",
    "@ionic/prettier-config": "^4.0.0",
    "@ionic/swiftlint-config": "^1.1.2",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-java": "^2.0.0",
    "rimraf": "^5.0.0",
    "rollup": "^3.0.0",
    "swiftlint": "^1.0.2",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@capacitor/core": "^5.0.0"
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "cordova": {
    "id": "cordova-plugin-mrrcat",
    "platforms": [
      "ios",
      "android"
    ]
  }
}
